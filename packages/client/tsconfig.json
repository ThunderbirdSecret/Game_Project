{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext" /*, "webworker" */],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/api/*": ["api/*"],
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/services/*": ["services/*"],
      "@/styles/*": ["styles/*"],
      "@/utils/*": ["utils/*"],
      "@/mock/*": ["mock/*"],
      "@/models/*": ["models/*"],
      "@/hooks/*": ["hooks/*"],
      "@/canvas/*": ["canvas/*"],
      "@/store/*": ["store/*"]
    },
    "types": [
      "vite-plugin-pwa/client"
    ]
  },
  "include": [
    ".eslintrc.js",
    "./src/**/*",
    "typing/app.d.ts",
    "typing/react.d.ts"
 ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
