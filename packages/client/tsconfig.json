{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/api/*": ["api/*"],
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/services/*": ["services/*"],
      "@/styles/*": ["styles/*"],
      "@/utils/*": ["utils/*"],
      "@/mock/*": ["mock/*"],
      "@/models/*": ["models/*"],
      "@/hoc/*": ["hoc/*"],
      "@/hooks/*": ["hooks/*"],
      "@/canvas/*": ["canvas/*"],
      "@/store/*": ["store/*"],
      "@/src/*": ["src/*"]
    },
    "types": ["vite-plugin-pwa/client"]
  },
  "include": [
    "**/*.tsx",
    ".eslintrc.cjs",
    "./src/**/*",
    "typing/app.d.ts",
    "typing/react.d.ts",
    "index.js",
    "*.config.ts",
    "vite.base.config.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
